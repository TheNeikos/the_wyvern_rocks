<div class="container-fluid">
  <div class="row">
    <%= column_do do %>
      <%= form_for @user, url: {action: 'create'} do |f| %>
        <div class="form-group">
          <%= f.label :email_address, class: "control-label" %>
          <%= f.email_field :email_address, class: "form-control" %>
          <% if @user.errors.full_messages_for(:email_address).any? %>
            <ul class="errors">
              <% @user.errors.full_messages_for(:email_address).each do |e| %>
                <li>
                  <span class="glyphicon glyphicon-alert"></span>
                  <small><%= e %></small>
                </li>
              <% end %>
            </ul>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.label :email_address_confirmation, class: "control-label"  %>
          <%= f.email_field :email_address_confirmation, class: "form-control"  %>
          <% if @user.errors.full_messages_for(:email_address_confirmation).any? %>
            <ul class="errors">
              <% @user.errors.full_messages_for(:email_address_confirmation).each do |e| %>
                <li>
                  <span class="glyphicon glyphicon-alert"></span>
                  <small><%= e %></small>
                </li>
              <% end %>
            </ul>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.label :password, class: "control-label"  %>
          <%= f.password_field :password, class: "form-control"  %>
          <% if @user.errors.full_messages_for(:password).any? %>
            <ul class="errors">
              <% @user.errors.full_messages_for(:password).each do |e| %>
                <li>
                  <span class="glyphicon glyphicon-alert"></span>
                  <small><%= e %></small>
                </li>
              <% end %>
            </ul>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.label :name, "Display Name", class: "control-label" %>
          <%= f.text_field :name, class: "form-control"  %>
          <% if @user.errors.full_messages_for(:name).any? %>
            <ul class="errors">
              <% @user.errors.full_messages_for(:name).each do |e| %>
                <li>
                  <span class="glyphicon glyphicon-alert"></span>
                  <small><%= e %></small>
                </li>
              <% end %>
            </ul>
          <% end %>
        </div>
        <%= f.submit "Register", class: "btn btn-create"%>
      <%- end %>
    <% end %>
  </div>
</div>
