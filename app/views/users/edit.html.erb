<div class="container-fluid">
  <div class="row">
    <%= column_do do %>
      <%= form_for @user, url: {action: 'update'} do |f| %>
        <div class="form-group">
          <%= f.label :email_address, class: "control-label" %>
          <%= f.email_field :email_address, class: "form-control" %>
          <% if @user.errors.full_messages_for(:email_address).any? %>
            <ul class="errors">
              <% @user.errors.full_messages_for(:email_address).each do |e| %>
                <li>
                  <span class="glyphicon glyphicon-alert"></span>
                  <small><%= e %></small>
                </li>
              <% end %>
            </ul>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.label :old_password, "Old Password", class: "control-label" %>
          <%= f.password_field :old_password, class: "form-control"  %>
          <% if @user.errors.full_messages_for(:password).any? %>
            <ul class="errors">
              <% @user.errors.full_messages_for(:password).each do |e| %>
                <li>
                  <span class="glyphicon glyphicon-alert"></span>
                  <small><%= e %></small>
                </li>
              <% end %>
            </ul>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.label :password, "New Password", class: "control-label" %>
          <%= f.password_field :password, class: "form-control"  %>
          <% if @user.errors.full_messages_for(:password).any? %>
            <ul class="errors">
              <% @user.errors.full_messages_for(:password).each do |e| %>
                <li>
                  <span class="glyphicon glyphicon-alert"></span>
                  <small><%= e %></small>
                </li>
              <% end %>
            </ul>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.label :name, "Display Name", class: "control-label" %>
          <%= f.text_field :name, class: "form-control"  %>
          <% if @user.errors.full_messages_for(:name).any? %>
            <ul class="errors">
              <% @user.errors.full_messages_for(:name).each do |e| %>
                <li>
                  <span class="glyphicon glyphicon-alert"></span>
                  <small><%= e %></small>
                </li>
              <% end %>
            </ul>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.label :avatar, class: "control-label" %>
          <%= f.file_field :avatar, class: "form-control"  %>
          <% if @user.errors.full_messages_for(:avatar).any? %>
            <ul class="errors">
              <% @user.errors.full_messages_for(:avatar).each do |e| %>
                <li>
                  <span class="glyphicon glyphicon-alert"></span>
                  <small><%= e %></small>
                </li>
              <% end %>
            </ul>
          <% end %>
        </div>
        <%= f.submit "Update", class: "btn btn-primary"%>
      <%- end %>
    <% end %>
  </div>
</div>
