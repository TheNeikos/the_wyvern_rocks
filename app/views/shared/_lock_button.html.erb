<% if policy(model).destroy? %>
  <% if model.closed_at %>
    <%= link_to "Unlock", self.send("#{model.class.to_s.underscore}_path", model, :close => true),
        remote: true, method: :delete, class: "btn btn-sm btn-primary"%>
  <% else %>
    <%= link_to "Lock", self.send("#{model.class.to_s.underscore}_path", model, :close => true),
        remote: true, method: :delete, class: "btn btn-sm btn-primary"%>
  <% end %>
<% end %>
