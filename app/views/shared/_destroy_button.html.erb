<% if policy(model).destroy? %>
  <% if model.deleted_at %>
    <%= link_to "Restore", self.send("#{model.class.to_s.underscore}_path", model),
        remote: true, method: :delete, class: "btn btn-sm btn-warning"%>
  <% else %>
    <%= link_to "Delete", self.send("#{model.class.to_s.underscore}_path", model),
        remote: true, method: :delete, class: "btn btn-sm btn-danger"%>
  <% end %>
<% end %>
