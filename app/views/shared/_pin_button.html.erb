<% if policy(model).destroy? %>
  <% if model.pinned_at %>
    <%= link_to "", self.send("#{model.class.to_s.underscore}_pin_path", model),
        remote: true, method: :post, class: "btn btn-sm btn-success glyphicon glyphicon-remove"%>
  <% else %>
    <%= link_to "", self.send("#{model.class.to_s.underscore}_pin_path", model),
        remote: true, method: :post, class: "btn btn-sm btn-success glyphicon glyphicon-pushpin"%>
  <% end %>
<% end %>
