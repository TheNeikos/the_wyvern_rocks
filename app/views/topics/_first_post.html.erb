<div class="well" id="topic_<%= @topic.id %>">
  <%= link_to @topic.user.name, @topic.user %>, <%= distance_of_time_in_words_to_now @topic.created_at %> ago
  <span class="pull-right">
    <%= render 'shared/edit_button', model: @topic %>
  </span>
  <hr>
  <div class="content">
    <%= raw @topic.content.bbcode_to_html_with_formatting %>
  </div>
</div>
