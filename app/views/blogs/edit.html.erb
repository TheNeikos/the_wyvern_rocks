<div class="container">
  <div class="row">
    <%= column_do do %>
      <%= render 'shared/breadcrumbs', links: [
        { name: "Blog Index", url: blogs_path },
        { name: "Creating new blog", url: nil },
      ] %>
    <% end %>
  </div>
  <div class="row">
    <%= column_do do %>
      <h1>Updating a blog</h1>
      <%= form_for @blog do |t|  %>
        <div class="form-group">
          <%= t.label :name %>
          <%= t.text_field :name, class: "form-control" %>
          <%= render 'shared/forms/errors_for', model: @blog, field: :name %>
        </div>
        <div class="form-group">
          <%= t.label :description %>
          <%= t.text_area :description, class: "form-control", rows: 10 %>
          <%= render 'shared/forms/errors_for', model: @blog, field: :description %>
        </div>
        <%= t.submit class: "btn btn-primary" %>
      <% end %>
    <% end %>
  </div>
</div>
